{
  "extends": "@react-table/ts-scripts/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "build",
    "skipLibCheck": true,
    "outDir": "./build",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["es6", "dom", "es2016", "es2017"]
  },
  "exclude": [
    "build",
    "node_modules",
    "**/*.js",
    "**/*.test.ts"
  ]
}
